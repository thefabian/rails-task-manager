<div class="container">
  <h1>Edit Task</h1>
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title,  class: 'form-label' %>
    <%= f.text_field :title, value: @task.title,class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details,  class: 'form-label' %>
    <%= f.text_field :details, value: @task.details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.check_box :completed %>
    Completed
  </div>

  <%= f.submit class: 'btn btn-primary', id: "update-btn" %>
  <% end %>

  <%= link_to "<< Back to list", tasks_path %>
</div>
